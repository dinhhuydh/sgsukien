= form_for event, url: user_events_path(user, event), :html => { :multipart => true } do |f|
  .fieldset
    .legend
      = f.label :name
      = f.text_field :name
      = f.label :datetime
      = f.text_field :datetime
      = f.label :address
      = f.text_field :address
    .legend
      = f.label :assets
      = f.fields_for :assets do |event_image_f|
        = event_image_f.file_field :image
      = f.label :message
      = f.text_field :message
      = f.label :description
      = f.text_area :description

  = f.submit 'Submit', onclick: 'addTimezoneToDateTime()' 

:javascript
  $(document).ready(function() {
    $('#event_datetime').datetimepicker();
  })
