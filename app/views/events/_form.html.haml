= form_for event, url: user_events_path(user, event) do |f|
  .fieldset
    .legend
      = f.label :name
      = f.text_field :name
      = f.label :datetime
      = f.text_field :datetime
      = f.label :address
      = f.text_field :address
    .legend
      = f.label :message
      = f.text_field :message
      = f.label :description
      = f.text_area :description

  = f.submit 'Submit', onclick: 'addTimezoneToDateTime()' 

:javascript
  $(document).ready(function() {
    $('#event_datetime').datetimepicker();
  })
